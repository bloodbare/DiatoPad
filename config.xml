<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "iskra.diatopad"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Diato Pad</name>

    <description>
        A diatonic accordion layout helper 
    </description>

    <author href="http://iskra.cat" email="info@iskra.cat">
        Iskra Desenvolupament SCCL
    </author>
<preference name="orientation" value="portrait" />

<icon src="icons/ios/icona_57x57.png" width="57" height="57" />
<icon src="icons/ios/icona_72x72.png" gap:platform="ios" width="72" height="72" />
<icon src="icons/ios/icona_114x114.png" width="114" height="114" />

<gap:splash src="splash/ios/entrada_320x480.png" width="320" height="480" />
<gap:splash src="splash/ios/entrada_640x960.png" width="640" height="960" />
<gap:splash src="splash/ios/entrada_748x1024.png" width="768" height="1024" />

<icon src="icons/android/icona_ldpi.png" gap:platform="android" gap:density="ldpi" />
<icon src="icons/android/icona_mdpi.png" gap:platform="android" gap:density="mdpi" />
<icon src="icons/android/icona_hdpi.png" gap:platform="android" gap:density="hdpi" />

<gap:splash src="splash/ios/entrada_640x960.png" gap:platform="android" gap:density="ldpi" />
<gap:splash src="splash/ios/entrada_640x960.png" gap:platform="android" gap:density="mdpi" />
<gap:splash src="splash/ios/entrada_640x960.png" gap:platform="android" gap:density="hdpi" />

</widget>